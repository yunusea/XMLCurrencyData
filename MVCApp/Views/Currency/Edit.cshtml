@model Models.Model.CurrencyData

<h2>@Model.CurrencyName Bilgilerini Düzenle</h2>

<hr />

@using (Html.BeginForm("Edit","Currency",FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">@Html.LabelFor(model => model.CurrencyName, htmlAttributes: new { @class = "control-label" }) :</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CurrencyName, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">@Html.LabelFor(model => model.BanknoteBuying, htmlAttributes: new { @class = "control-label" }) :</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BanknoteBuying, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">@Html.LabelFor(model => model.BanknoteSelling, htmlAttributes: new { @class = "control-label" }) :</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BanknoteSelling, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label" }) :</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <button class="btn btn-default">Düzenle</button>
            </div>
        </div>
    </div>
}


